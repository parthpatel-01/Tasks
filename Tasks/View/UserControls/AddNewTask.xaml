<UserControl x:Class="Tasks.View.UserControls.AddNewTask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tasks.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="5*"/>

        </Grid.ColumnDefinitions>
        <TextBox Name="NewTaskBox" Grid.Column="1" FontSize="18"  VerticalContentAlignment="Center" Margin="5 5" TextChanged="NewTaskBox_TextChanged"></TextBox>
        <TextBlock Name="NewTaskBlk" Grid.Column="1" Text="Enter a New Task..." FontSize="18" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5 5" />
        <Button Name="AddTaskBtn" Grid.Column="2" Content="Add Task" FontSize="18" Margin="5 5" Click="AddTaskBtn_Click" />
    </Grid>
</UserControl>
