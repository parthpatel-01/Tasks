<UserControl x:Class="Tasks.View.UserControls.TaskNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tasks.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800"
             BorderThickness="1 0 1 1"
             BorderBrush="Black"
             Margin="5 0 5 0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5.5*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Grid.Column="1" Text="This is a Sample Task" VerticalAlignment="Center" FontSize="20"></TextBlock>
        <CheckBox Grid.Column="2" Content="Ongoing" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <DatePicker Grid.Column="3" FontSize="20" VerticalAlignment="Center"></DatePicker>
    </Grid>
</UserControl>
